<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Warna background di belakang foto -->
    <solid android:color="#FFFFFF"/>

    <!-- Border lingkaran -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0" />

    <!-- Tidak perlu corner radius karena bentuk oval -->
    <size
        android:width="100dp"
        android:height="100dp"/>

</shape>